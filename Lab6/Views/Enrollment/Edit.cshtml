@model Lab6.Models.Enrollment

@{
    ViewData["Title"] = "Sửa Đăng ký";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EnrollmentId" />

                    <div class="mb-3">
                        <label asp-for="StudentId" class="form-label"></label>
                        <select asp-for="StudentId" class="form-select" asp-items="ViewBag.Students"></select>
                        <span asp-validation-for="StudentId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CourseId" class="form-label"></label>
                        <select asp-for="CourseId" class="form-select" asp-items="ViewBag.Courses"></select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="EnrollmentDate" class="form-label"></label>
                        <input asp-for="EnrollmentDate" type="date" class="form-control" />
                        <span asp-validation-for="EnrollmentDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Grade" class="form-label"></label>
                        <select asp-for="Grade" class="form-select">
                            <option value="">-- Chọn điểm --</option>
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                            <option value="D">D</option>
                            <option value="F">F</option>
                        </select>
                        <span asp-validation-for="Grade" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
