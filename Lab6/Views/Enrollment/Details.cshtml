@model Lab6.Models.Enrollment

@{
    ViewData["Title"] = "Chi tiết Đăng ký";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.EnrollmentId</dd>

            <dt class="col-sm-3">Sinh viên</dt>
            <dd class="col-sm-9">@Model.Student?.StudentName</dd>

            <dt class="col-sm-3">Khóa học</dt>
            <dd class="col-sm-9">@Model.Course?.CourseName</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EnrollmentDate)</dt>
            <dd class="col-sm-9">@Model.EnrollmentDate.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Grade)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Grade)</dd>
        </dl>

        <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model.EnrollmentId" class="btn btn-warning">Sửa</a>
            <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        </div>
    </div>
</div>
