@model IEnumerable<Lab6.Models.Enrollment>

@{
    ViewData["Title"] = "Danh sách Đăng ký Khóa học";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Thêm Đăng ký mới</a>
</p>
<table id="enrollmentsTable" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Sinh viên</th>
            <th>Khóa học</th>
            <th>Ngày đăng ký</th>
            <th>Điểm</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EnrollmentId</td>
                <td>@item.Student?.StudentName</td>
                <td>@item.Course?.CourseName</td>
                <td>@item.EnrollmentDate.ToString("dd/MM/yyyy")</td>
                <td>@item.Grade</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EnrollmentId" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.EnrollmentId" class="btn btn-sm btn-info">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.EnrollmentId" class="btn btn-sm btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#enrollmentsTable').DataTable();
        });
    </script>
}
