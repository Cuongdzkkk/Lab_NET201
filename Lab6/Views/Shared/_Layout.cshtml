<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] | Antigravity Workspace</title>
    
    <!-- FONTS: Outfit & Google Sans -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;700&display=swap" rel="stylesheet">
    
    <!-- ICONS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    
    <!-- BOOTSTRAP -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- ANTIGRAVITY GLOBAL THEME -->
    <style>
        :root {
            /* GOOGLE BRAND COLORS */
            --google-blue: #4285F4;
            --google-red: #EA4335;
            --google-yellow: #FBBC05;
            --google-green: #34A853;
            --google-grey: #F1F3F4;
            --text-dark: #202124;
            --text-secondary: #5f6368;
            
            /* SURFACE */
            --surface-white: #ffffff;
            --shadow-float: 0 10px 40px -10px rgba(0,0,0,0.08);
            --shadow-hover: 0 20px 60px -10px rgba(66, 133, 244, 0.2);
            --radius-pill: 50px;
            --radius-card: 24px;
        }

        body {
            font-family: 'Outfit', sans-serif;
            color: var(--text-dark);
            background-color: transparent; /* Allows Canvas to show */
            margin: 0;
            overflow-x: hidden;
        }

        /* === 3D BACKGROUND LAYER === */
        #canvas-container {
            position: fixed;
            top: 0; left: 0;
            width: 100vw; height: 100vh;
            z-index: -1;
            /* Subtle Fog Gradient behind particles */
            background: radial-gradient(circle at 50% 100%, #ffffff 0%, #f8f9fa 100%);
        }

        /* === LAYOUT CONTAINER === */
        .container {
            max-width: 1600px !important;
            margin: 0 auto;
            padding: 40px 20px;
            position: relative;
            z-index: 10;
        }
        
        main[role="main"] {
            min-height: 80vh;
        }

        /* === TYPOGRAPHY (DRAMATIC) === */
        h1, h2, h3, h4 {
            color: var(--text-dark);
            font-weight: 700;
            letter-spacing: -1px;
        }

        h1 {
            font-size: 3.5rem;
            text-align: center;
            margin-bottom: 3rem;
            text-shadow: 0 10px 30px rgba(0,0,0,0.1);
            background: linear-gradient(135deg, #202124 0%, #5f6368 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        h2 { font-size: 2.5rem; margin-bottom: 2rem; }
        h4 { font-size: 1.5rem; font-weight: 500; color: var(--text-secondary); }

        /* === GLASS NAVBAR === */
        .navbar {
            background: rgba(255, 255, 255, 0.8);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(0,0,0,0.05);
            padding: 1rem 2rem;
            margin-bottom: 2rem;
        }
        
        .navbar-brand {
            font-weight: 700;
            letter-spacing: 1px;
            color: var(--text-dark) !important;
        }

        .nav-link {
            color: var(--text-secondary) !important;
            font-weight: 500;
            transition: color 0.2s;
        }
        
        .nav-link:hover {
            color: var(--google-blue) !important;
        }

        /* === FLOATING PILL TABLES === */
        
        /* Force override of Bootstrap striped/bordered */
        .table {
            border-collapse: separate !important;
            border-spacing: 0 15px !important; /* Vertical gap between pills */
            width: 100%;
            margin-top: 20px;
            border: none !important;
        }

        .table thead {
            background: transparent;
        }

        .table thead th {
            border: none !important;
            text-transform: uppercase;
            font-size: 0.85rem;
            color: var(--text-secondary);
            font-weight: 700;
            letter-spacing: 1px;
            padding: 0 30px 10px 30px;
            background: transparent !important;
        }

        /* The Pill Row */
        /* Use !important to override .table-striped > tbody > tr */
        .table tbody tr {
            background: var(--surface-white) !important;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
            border-radius: var(--radius-pill);
            transition: transform 0.2s cubic-bezier(0.175, 0.885, 0.32, 1.275), box-shadow 0.2s ease;
        }

        .table tbody tr:hover {
            transform: scale(1.01) translateY(-3px);
            box-shadow: var(--shadow-hover);
            background: #fff !important;
            z-index: 5;
            position: relative;
        }

        .table tbody td {
            border: none !important;
            padding: 20px 30px; /* Generous padding */
            vertical-align: middle;
            font-size: 1rem;
            color: var(--text-dark);
        }

        /* Radius correction for TD to essentially fake the TR border radius */
        .table tbody td:first-child {
            border-top-left-radius: var(--radius-pill);
            border-bottom-left-radius: var(--radius-pill);
        }
        .table tbody td:last-child {
            border-top-right-radius: var(--radius-pill);
            border-bottom-right-radius: var(--radius-pill);
        }

        /* === GOOGLE INPUTS === */
        .form-control, .form-select {
            background-color: var(--google-grey) !important;
            border: 2px solid transparent !important;
            border-radius: var(--radius-pill) !important; /* Fully rounded */
            padding: 15px 25px;
            font-size: 1rem;
            color: var(--text-dark);
            box-shadow: none !important;
            transition: all 0.3s ease;
        }

        .form-control:focus, .form-select:focus {
            background-color: #ffffff !important;
            border-color: var(--google-blue) !important;
            box-shadow: 0 10px 30px rgba(66, 133, 244, 0.15) !important;
            outline: none;
        }

        /* Labels */
        label, label.control-label {
            font-weight: 500;
            margin-bottom: 8px;
            margin-left: 15px; /* Align with input curve */
            text-transform: uppercase;
            font-size: 0.75rem;
            color: var(--text-secondary);
            letter-spacing: 0.5px;
        }
        
        /* DataTables overrides */
        .dataTables_wrapper .dataTables_filter input {
             background-color: var(--google-grey);
             border-radius: 20px;
             border: none;
             padding: 5px 15px;
        }
        .dataTables_wrapper .dataTables_length select {
             background-color: var(--google-grey);
             border-radius: 20px;
             border: none;
             padding: 5px 10px;
        }
        
        /* Paging buttons */
        .page-link {
            border-radius: 50% !important;
            margin: 0 5px;
            border: none;
            color: var(--text-dark);
        }
        .page-item.active .page-link {
            background-color: var(--google-blue);
            color: white;
        }

        /* === GLASS CARDS (View Containers) === */
        .card {
            border-radius: 32px;
            border: none;
            background: rgba(255,255,255,0.85); /* Slightly more opaque */
            backdrop-filter: blur(12px);
            box-shadow: var(--shadow-float);
            margin-bottom: 30px;
        }
        
        .card-header {
            background: transparent;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            padding: 25px 30px;
        }

        .card-body {
            padding: 40px;
        }

        /* === BUTTONS (Magnet Pills) === */
        .btn {
            border-radius: 50px;
            padding: 12px 30px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border: none;
            transition: all 0.2s ease;
            box-shadow: 0 4px 10px rgba(0,0,0,0.1);
        }

        .btn-primary {
            background-color: var(--text-dark);
            color: white;
        }

        .btn-primary:hover {
            background-color: var(--google-blue);
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(66, 133, 244, 0.4);
        }
        
        .btn-sm {
            padding: 8px 16px;
            font-size: 0.8rem;
        }
        
        .btn-danger { background-color: white; color: var(--google-red); }
        .btn-danger:hover { background-color: var(--google-red); color: white; }
        
        .btn-warning { background-color: white; color: var(--google-yellow); }
        .btn-warning:hover { background-color: var(--google-yellow); color: white; }
        
        .btn-info { background-color: white; color: var(--google-blue); }
        .btn-info:hover { background-color: var(--google-blue); color: white; }

        /* RAZOR FIX: ESCAPED MEDIA QUERIES */
        @@media (max-width: 992px) {
            h1 { font-size: 2.5rem; }
            .container { padding: 20px 10px; }
            .table-responsive { overflow-x: auto; -webkit-overflow-scrolling: touch; }
        }
    </style>
</head>
<body>
    
    <!-- 3D KINETIC BACKGROUND -->
    <div id="canvas-container"></div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3">
            <div class="container-fluid" style="max-width: 1600px;">
                <a class="brand-logo d-flex align-items-center gap-2 text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-grid-3x3-gap-fill" style="color: var(--google-blue); font-size: 1.5rem;"></i>
                    <span style="font-weight: 700; color: var(--text-dark); letter-spacing: -0.5px; font-size: 1.25rem;">ANTIGRAVITY</span>
                </a>
                <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="bi bi-list fs-2"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end gap-3">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="Index">Students</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Course" asp-action="Index">Courses</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Enrollment" asp-action="Index">Enrollments</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Index">Admin</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success border-0 text-center" style="background-color: #e6f4ea; color: #137333; border-radius: 50px;">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                </div>
            }
            @RenderBody()
        </main>
    </div>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- ANTIGRAVITY ENGINE -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script src="~/js/antigravity.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
