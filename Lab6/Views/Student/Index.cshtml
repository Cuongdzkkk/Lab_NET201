@model IEnumerable<Lab6.Models.Student>

@{
    ViewData["Title"] = "Danh sách Sinh viên";
}

<div class="row">
    <div class="col-12">
        <h2>@ViewData["Title"]</h2>
        <p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Thêm Sinh viên mới
            </a>
        </p>
        <div class="card">
            <div class="card-body">
                <table id="studentsTable" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên sinh viên</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Ngày sinh</th>
                            <th>Địa chỉ</th>
                            <th>GPA</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.StudentId</td>
                                <td>@item.StudentName</td>
                                <td>@item.Email</td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.DateOfBirth.ToString("dd/MM/yyyy")</td>
                                <td>@item.Address</td>
                                <td>@item.GPA.ToString("N2")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-sm btn-warning">Sửa</a>
                                    <a asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-sm btn-info">Chi tiết</a>
                                    <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-sm btn-danger">Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#studentsTable').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.6/i18n/vi.json"
                }
            });
        });
    </script>
}
