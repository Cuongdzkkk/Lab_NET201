@model CreateProductVM

@{
    ViewData["Title"] = "Update Product";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        
        <!-- üíé GLASS CARD CONTAINER -->
        <div class="glass-card floating" style="margin-top: 2rem; border-top: 1px solid rgba(236, 72, 153, 0.5);">
            
            <div class="text-center mb-5">
                <h2 class="fw-bold" style="letter-spacing: 2px;">üõ†Ô∏è UPDATE PRODUCT</h2>
                <p class="text-muted">Modify product specifications in the Antigravity database.</p>
            </div>

            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <!-- ‚ö†Ô∏è CORE LOGIC: HIDDEN ID -->
                <input type="hidden" name="id" value="@ViewBag.ProductId" />
                
                <!-- üôà HIDDEN CUSTOM SPECS (As requested, logic preserved but UI hidden) -->
                <input type="hidden" asp-for="RawProduct" />

                <!-- üñäÔ∏è INPUT FIELDS GRID -->
                <div class="row g-4">
                    <div class="col-md-12">
                        <div class="position-relative">
                            <input asp-for="Name" class="form-control neon-input" placeholder=" " />
                            <label class="floating-label">Product Name</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="position-relative">
                            <input asp-for="Price" type="number" step="0.01" class="form-control neon-input" placeholder=" " />
                            <label class="floating-label">Price (VNƒê)</label>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="position-relative">
                            <input asp-for="Quantity" type="number" min="1" class="form-control neon-input" placeholder=" " />
                            <label class="floating-label">Quantity</label>
                            <span asp-validation-for="Quantity" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <div class="position-relative">
                            <select asp-for="Status" class="form-select neon-input">
                                <option value="true">Active (On Sale)</option>
                                <option value="false">Inactive (Hidden)</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- üñºÔ∏è CUSTOM FILE UPLOAD (WITH PRE-LOADED IMAGE) -->
                <div class="mt-4 mb-5">
                    <label class="text-cyan fw-bold mb-2">Product Hologram (Image)</label>
                    <div class="upload-container" id="uploadZone">
                        <input asp-for="ImageFile" type="file" accept="image/*" id="imageUpload" class="file-input-hidden" />
                        
                        <div class="upload-content text-center @(!string.IsNullOrEmpty(ViewBag.CurrentImagePath) ? "d-none" : "")">
                            <div class="mb-3">
                                <i class="bi bi-cloud-upload" style="font-size: 2rem; color: var(--neon-pink);"></i>
                            </div>
                            <span class="btn btn-outline-light btn-sm mb-2">Change File</span>
                            <p class="small text-muted mb-0">or drop new image here</p>
                        </div>

                        <!-- Preview Area -->
                        <div id="imagePreviewContainer" class="preview-container @(!string.IsNullOrEmpty(ViewBag.CurrentImagePath) ? "" : "d-none")">
                            <img id="imagePreviewImg" src="@ViewBag.CurrentImagePath" alt="Preview" />
                            <button type="button" id="removeImageBtn" class="btn-close-preview" title="Revert to original or Clear">√ó</button>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(ViewBag.CurrentImagePath))
                    {
                         <div class="text-center mt-2">
                             <small class="text-success">‚úî Current image loaded</small>
                         </div>
                    }
                </div>

                <!-- üöÄ CYBER SAVE BUTTON -->
                <div class="d-grid">
                    <button type="submit" class="cyber-button save-mode">
                        <span class="btn-text">üíæ SAVE CHANGES</span>
                        <div class="btn-glitch"></div>
                    </button>
                </div>

            </form>
        </div>
        
        <div class="text-center mt-3">
            <a asp-action="Index" class="text-muted text-decoration-none hover-link">‚Üê Return to Command Center</a>
        </div>

    </div>
</div>

<style>
    /* üé® LOCAL STYLES FOR EDIT PAGE (ADDITIVE) */
    
    /* Neon Input & Floating Labels */
    .neon-input {
        background: rgba(20, 10, 20, 0.6) !important; /* Slightly more pinkish tint for Edit */
        border: 1px solid rgba(255,255,255,0.1);
        color: white !important;
        height: 50px;
        padding-top: 20px;
        padding-left: 15px;
    }
    
    .neon-input:focus {
        border-color: var(--neon-pink);
        box-shadow: 0 0 15px rgba(236, 72, 153, 0.3);
    }
    
    .floating-label {
        position: absolute;
        top: 12px;
        left: 15px;
        pointer-events: none;
        color: rgba(255,255,255,0.5);
        transition: all 0.3s ease;
        font-size: 0.9rem;
    }
    
    /* Float animation */
    .neon-input:focus ~ .floating-label,
    .neon-input:not(:placeholder-shown) ~ .floating-label,
    .neon-input:-webkit-autofill ~ .floating-label {
        top: 5px;
        font-size: 0.7rem;
        color: var(--neon-pink);
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* File Upload Styling */
    .file-input-hidden {
        position: absolute;
        width: 100%;
        height: 100%;
        opacity: 0;
        cursor: pointer;
        z-index: 2;
    }
    
    .upload-container {
        position: relative;
        border: 2px dashed rgba(255,255,255,0.2);
        border-radius: 12px;
        padding: 30px;
        transition: all 0.3s ease;
        background: rgba(0,0,0,0.2);
        min-height: 150px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .upload-container:hover, .upload-container.dragover {
        border-color: var(--neon-pink);
        background: rgba(236, 72, 153, 0.1);
        box-shadow: 0 0 20px rgba(236, 72, 153, 0.2) inset;
    }
    
    .preview-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: #1a1a2e;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 3;
        overflow: hidden;
    }
    
    .preview-container img {
        max-width: 100%;
        max-height: 100%;
        object-fit: contain;
        box-shadow: 0 0 30px rgba(0,0,0,0.5);
    }
    
    .btn-close-preview {
        position: absolute;
        top: 10px;
        right: 10px;
        background: rgba(255,0,0,0.8);
        color: white;
        border: none;
        border-radius: 50%;
        width: 30px;
        height: 30px;
        font-size: 1.2rem;
        cursor: pointer;
        z-index: 4;
    }

    /* üöÄ Cyber Button (Save Variant) */
    .cyber-button.save-mode {
        background: linear-gradient(90deg, var(--neon-pink), var(--neon-purple));
    }
    
    .cyber-button {
        position: relative;
        border: none;
        padding: 15px;
        font-weight: bold;
        color: white;
        letter-spacing: 2px;
        clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
        transition: all 0.3s ease;
        text-transform: uppercase;
        font-size: 1.1rem;
        overflow: hidden;
    }
    
    .cyber-button:hover {
        transform: translateY(-2px);
        box-shadow: 
            0 0 20px var(--neon-pink),
            0 0 40px var(--neon-purple);
        text-shadow: 0 0 10px white;
    }
    
    .hover-link:hover {
        color: var(--neon-pink) !important;
        text-shadow: 0 0 10px var(--neon-pink);
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // üñºÔ∏è IMAGE PREVIEW LOGIC
        const uploadZone = document.getElementById('uploadZone');
        const fileInput = document.getElementById('imageUpload');
        const previewContainer = document.getElementById('imagePreviewContainer');
        const previewImg = document.getElementById('imagePreviewImg');
        const removeBtn = document.getElementById('removeImageBtn');
        const uploadContent = document.querySelector('.upload-content');
        
        // Initial State (Server Side Rendered)
        const originalImageSrc = previewImg.src;
        const hasOriginalImage = originalImageSrc && originalImageSrc !== window.location.href;

        fileInput.addEventListener('change', function(e) {
            handleFile(this.files[0]);
        });

        // Drag & Drop effects
        uploadZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadZone.classList.add('dragover');
        });

        uploadZone.addEventListener('dragleave', () => {
            uploadZone.classList.remove('dragover');
        });

        uploadZone.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadZone.classList.remove('dragover');
            fileInput.files = e.dataTransfer.files;
            handleFile(e.dataTransfer.files[0]);
        });

        function handleFile(file) {
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    previewImg.src = e.target.result;
                    previewContainer.classList.remove('d-none');
                    uploadContent.classList.add('d-none'); // Hide text
                }
                reader.readAsDataURL(file);
            }
        }

        removeBtn.addEventListener('click', (e) => {
            e.stopPropagation(); // Prevent triggering file input
            fileInput.value = ''; // Clear input
            
            // Revert to original if exists, else clear
           if (hasOriginalImage) {
               // If we want to allow 'removing' image, we would need extra logic. 
               // For now, let's just clear preview of NEW file and show original.
               // But wait, if user wants to DELETE the image? The controller doesn't support deleting, only replacing.
               // So 'revert' is the safest behavior.
               previewImg.src = originalImageSrc;
               // If no file selected, preview is showing original.
           } else {
               previewImg.src = '';
               previewContainer.classList.add('d-none');
               uploadContent.classList.remove('d-none');
           }
        });
    </script>
}

