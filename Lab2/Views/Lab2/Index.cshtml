@{
    ViewData["Title"] = "Command Deck";
}

<div class="bento-grid">
    
    <!-- 1. HERO IDENTITY -->
    <div class="bento-card col-span-8" style="background: rgba(10,15,30,0.85);">
        <small class="text-neon" style="letter-spacing: 2px;">// SESSION: ALPHA-001</small>
        <h1 id="hacker-text" style="font-size: 3rem; margin: 1rem 0;">INITIALIZING...</h1>
        <p style="color: #8899aa; max-width: 500px; line-height: 1.6;">
            Nexus Operations Center online. The neural grid is stable. 
            Authentication-Key verified. Waiting for command input.
        </p>
    </div>

    <!-- 2. HOLOGRAM SPACE -->
    <div class="bento-card col-span-4" style="display: flex; align-items: center; justify-content: center;">
        <div style="text-align: center; opacity: 0.8; animation: spin 10s infinite linear;">
             <svg width="100" height="100" viewBox="0 0 100 100" fill="none" stroke="var(--neon-cyan)">
                <circle cx="50" cy="50" r="40" stroke-width="1" stroke-dasharray="5 5" />
                <circle cx="50" cy="50" r="25" stroke-width="2" />
                <path d="M50 0 L50 100 M0 50 L100 50" stroke-width="0.5" stroke="rgba(0,243,255,0.3)" />
            </svg>
        </div>
    </div>

    <!-- 3. MODULE 1 & 2: DATABASE -->
    <div class="bento-card col-span-6">
        <h2 style="color: var(--neon-cyan);">DATABASE MANAGEMENT</h2>
        <div style="display: flex; gap: 1rem; margin-top: 1.5rem;">
            <a asp-action="ProductList" class="btn btn-cyan" style="flex:1;">MANAGE INVENTORY</a>
            <a asp-action="SearchProduct" class="btn btn-cyan" style="flex:1; border-style:dashed;">SEARCH ENGINE</a>
        </div>
    </div>

    <!-- 4. MODULE 3 & 4: LOGISTICS -->
    <div class="bento-card col-span-6" style="border-color: var(--neon-purple);">
        <h2 style="color: var(--neon-purple);">LOGISTICS COMMAND</h2>
        <div style="display: flex; gap: 1rem; margin-top: 1.5rem;">
            <a asp-action="FilterOrders" class="btn btn-pink" style="flex:1; border-style:dashed;">FILTER LOGS</a>
            <a asp-action="CreateOrder" class="btn btn-pink" style="flex:1;">INIT LAUNCH</a>
        </div>
    </div>

    <!-- 5. MODULE 5: QUICK IMPORT (CUSTOM BINDER) -->
    <div class="bento-card col-span-12" style="border-top: 2px solid var(--neon-cyan);">
        <h2 style="color: var(--neon-cyan);">QUICK DATA UPLOAD LINK</h2>
        <p style="font-size: 0.8rem; color: #8899aa; margin-bottom: 1rem;">
            Directly inject raw product data into the mainframe using the specified protocol: 
            <code style="color:white">Name-Description-Price</code>
        </p>
        
        <div style="display: flex; gap: 1rem; align-items: center;">
            <input type="text" id="quickImportInput" class="form-control" 
                   style="background: rgba(0,0,0,0.5); border: 1px solid #334455; color: white;"
                   placeholder="e.g. HyperDrive-Faster than light-5000.00" />
            <button onclick="executeQuickParse()" class="btn btn-cyan">UPLOAD</button>
        </div>
        <div id="quickParseResult" style="margin-top: 1rem; font-family: 'Consolas', monospace; font-size: 0.9rem;"></div>
    </div>

    <script>
        async function executeQuickParse() {
            const inputVal = document.getElementById('quickImportInput').value;
            const resultDiv = document.getElementById('quickParseResult');
            resultDiv.innerHTML = '<span style="color:yellow;">UPLOADING...</span>';

            const formData = new FormData();
            formData.append('productData', inputVal); // Matches binder input name

            try {
                const response = await fetch('/QuickParse', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    const data = await response.json();
                    resultDiv.innerHTML = `<span style="color:var(--neon-cyan);">SUCCESS: ${data.message}</span>`;
                } else {
                    const err = await response.text(); // or json if your BadRequest returns object
                    // Try parsing JSON error
                    try {
                        const errObj = JSON.parse(err);
                        resultDiv.innerHTML = `<span style="color:var(--neon-pink);">ERROR: ${errObj.message || 'Unknown Error'}</span>`;
                    } catch {
                         resultDiv.innerHTML = `<span style="color:var(--neon-pink);">ERROR: ${err}</span>`;
                    }
                }
            } catch (error) {
                resultDiv.innerHTML = `<span style="color:red;">CRITICAL: Connection Error</span>`;
            }
        }
    </script>

</div>

