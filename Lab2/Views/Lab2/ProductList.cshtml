@model IEnumerable<Lab2.Models.Product>

@{
    ViewData["Title"] = "Inventory Management";
}

<div class="bento-card">
    <div class="flex-between mb-2">
        <h2>INVENTORY MANAGEMENT</h2>
        <a asp-action="Index" class="btn btn-cyan" style="border-style:dashed;">[ RETURN TO DECK ]</a>
    </div>

    <!-- Using the check just in case, though controller returns all -->
    @if(Model != null && Model.Any())
    {
        <table class="tech-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>PRODUCT NAME</th>
                    <th>DESCRIPTION</th>
                    <th>PRICE PROJECTION</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td style="color:#fff; font-weight:bold;">@item.Name</td>
                        <td style="color:#888; font-size:0.8rem;">@item.Description</td>
                        <td class="text-neon">@item.Price.ToString("C")</td>
                        <td>
                            <a asp-action="UpdateProduct" asp-route-id="@item.Id" class="btn btn-cyan btn-sm">EDIT</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert-cyber">
            ⚠️ SYSTEM ERROR: INVENTORY EMPTY
        </div>
    }
</div>
