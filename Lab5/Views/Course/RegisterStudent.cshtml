@{
    ViewData["Title"] = "Register Student";
}

<h1>Register Student to Course</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterStudent">
            <div class="form-group">
                <label class="control-label">Student</label>
                <select name="studentId" class="form-control" asp-items="ViewBag.StudentId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Course</label>
                <select name="courseId" class="form-control" asp-items="ViewBag.CourseId"></select>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
