@{
    ViewData["Title"] = "Quick Create Student";
}

<h1>Quick Create - Student</h1>

@if (ViewBag.Errors != null)
{
    <div class="alert alert-danger">
        <h4>Lỗi xảy ra:</h4>
        <ul>
            @foreach (var error in ViewBag.Errors as List<string>)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

<div class="card border-warning">
    <div class="card-header bg-warning">
        <h5 class="mb-0"><i class="fas fa-bolt"></i> Quick Create - Custom Format</h5>
    </div>
    <div class="card-body">
        <form asp-action="QuickCreate" method="post">
            @Html.AntiForgeryToken()
            
            <div class="alert alert-info">
                <strong>Định dạng:</strong> <code>FirstName|LastName|Email|DateBirth</code><br>
                <strong>Ví dụ:</strong> <code>John|Doe|john.doe@email.com|2000-01-15</code><br>
                <small class="text-muted">Ngày tháng định dạng: yyyy-MM-dd</small>
            </div>
            
            <div class="form-group mb-3">
                <label for="student">Nhập dữ liệu (Custom Format):</label>
                <textarea name="student" id="student" class="form-control font-monospace" rows="3" 
                          placeholder="John|Doe|john.doe@email.com|2000-01-15"></textarea>
                <small class="form-text text-muted">Phân cách các trường bằng dấu | (pipe)</small>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-bolt"></i> Tạo Quick
                </button>
                <button type="button" class="btn btn-info" onclick="fillExample()">
                    <i class="fas fa-lightbulb"></i> Điền Ví Dụ
                </button>
                <a asp-action="Create" class="btn btn-secondary">
                    <i class="fas fa-edit"></i> Dùng Form Thường
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

<script>
function fillExample() {
    document.getElementById('student').value = 'John|Doe|john.doe@email.com|2000-01-15';
}
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
