<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MEMORY IN THE RAIN</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;600&family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap (Keep for grid utility if needed, but we override most styles) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Three.js Background -->
    <div id="canvas-container"></div>
    
    <!-- Liquid Transition Overlay -->
    <div id="liquid-overlay"></div>

    <!-- Main Content -->
    <div class="main-container">
        <header class="rain-header">
            <div class="brand-block">
                💧 Lab5 Dashboard
            </div>
            <nav class="header-nav">
                <a asp-controller="Home" asp-action="Index">Dashboard</a>
                <a asp-controller="Students" asp-action="Index">Students</a>
                <a asp-controller="NhanVien" asp-action="Index">Staff</a>
                <a asp-controller="Course" asp-action="Index">Courses</a>
            </nav>
        </header>

        <main role="main">
            @RenderBody()
        </main>

        <footer class="code-footer">
            <div class="container">
                <details>
                    <summary>SYSTEM_LOGS & DEBUG_INF0</summary>
                    <div class="mt-3 p-3" style="background: rgba(0,0,0,0.5); border-radius: 4px; font-family: monospace;">
                        <p>Status: ONLINE</p>
                        <p>Theme: MEMORY_IN_THE_RAIN_V1.0</p>
                        <p>Renderer: WebGL 2.0</p>
                        <p>&copy; 2024 Lab5 - Privacy Policy</p>
                    </div>
                </details>
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- GSAP for Transitions -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="~/js/liquid-transition.js" asp-append-version="true"></script>
    <script src="~/js/water-effects.js" asp-append-version="true"></script>

    <!-- Rain Simulation (Canvas) -->
    <script src="~/js/rain-simulation.js" asp-append-version="true"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
