@model Lab5.Models.NhanVien

@{
    ViewData["Title"] = "NhanVien Details";
}

<h1>Chi Tiết Nhân Viên</h1>

<div class="card">
    <div class="card-header bg-info text-white">
        <h5>Thông Tin Nhân Viên</h5>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã NV</dt>
            <dd class="col-sm-9">@Model.MaNV</dd>
            
            <dt class="col-sm-3">Họ</dt>
            <dd class="col-sm-9">@Model.HoNV</dd>
            
            <dt class="col-sm-3">Tên Lót</dt>
            <dd class="col-sm-9">@Model.TenLot</dd>
            
            <dt class="col-sm-3">Tên</dt>
            <dd class="col-sm-9">@Model.TenNV</dd>
            
            <dt class="col-sm-3">Phái</dt>
            <dd class="col-sm-9">@Model.Phai</dd>
            
            <dt class="col-sm-3">Địa Chỉ</dt>
            <dd class="col-sm-9">@Model.DChi</dd>
            
            <dt class="col-sm-3">Lương</dt>
            <dd class="col-sm-9">@Model.Luong.ToString("N0") VNĐ</dd>
            
            <dt class="col-sm-3">Ngày Sinh</dt>
            <dd class="col-sm-9">@Model.NgaySinh.ToString("dd/MM/yyyy")</dd>
            
            <dt class="col-sm-3">Phòng Ban</dt>
            <dd class="col-sm-9">@Model.PHG</dd>
            
            <dt class="col-sm-3">Mã NQL</dt>
            <dd class="col-sm-9">@Model.Ma_NQL</dd>
        </dl>
    </div>
</div>

@if (Model.ThanNhans != null && Model.ThanNhans.Any())
{
    <div class="card mt-3">
        <div class="card-header bg-success text-white">
            <h5>Danh Sách Thân Nhân</h5>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Mối Quan Hệ</th>
                        <th>Phái</th>
                        <th>Ngày Sinh</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var rel in Model.ThanNhans)
                    {
                        <tr>
                            <td>@rel.TenTN</td>
                            <td>@rel.MoiQuanHe</td>
                            <td>@rel.Phai</td>
                            <td>@rel.NgSinh.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.MaNV" class="btn btn-primary">
        <i class="fas fa-edit"></i> Sửa
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Quay lại
    </a>
</div>
