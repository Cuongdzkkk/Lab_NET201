@model Lab5.Models.NhanVien

@{
    ViewData["Title"] = "Quick Create NhanVien";
}

<h1>Quick Create - Nhân Viên</h1>

@if (ViewBag.Errors != null)
{
    <div class="alert alert-danger">
        <h4>Lỗi xảy ra:</h4>
        <ul>
            @foreach (var error in ViewBag.Errors as List<string>)
            {
                <li>@error</li>
            }
        </ul>
    </div>
}

<div class="card border-warning">
    <div class="card-header bg-warning">
        <h5 class="mb-0"><i class="fas fa-bolt"></i> Quick Create - Custom Format</h5>
    </div>
    <div class="card-body">
        <form asp-action="QuickCreate" method="post">
            @Html.AntiForgeryToken()
            
            <div class="alert alert-info">
                <strong>Định dạng:</strong> <code>HoNV|TenLot|TenNV|Phai|DChi|Luong|NgaySinh|PHG|Ma_NQL</code><br>
                <strong>Ví dụ:</strong> <code>Nguyen|Van|A|Nam|Ha Noi|15000000|1990-01-15|1|NULL</code><br>
                <small class="text-muted">Lưu ý: MaNV sẽ được tự động tạo (auto-increment)</small>
            </div>
            
            <div class="form-group mb-3">
                <label for="nhanvien">Nhập dữ liệu (Custom Format):</label>
                <textarea name="nhanvien" id="nhanvien" class="form-control font-monospace" rows="3" 
                          placeholder="Nguyen|Van|A|Nam|Ha Noi|15000000|1990-01-15|1|NULL"></textarea>
                <small class="form-text text-muted">Phân cách các trường bằng dấu | (pipe)</small>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-bolt"></i> Tạo Quick
                </button>
                <button type="button" class="btn btn-info" onclick="fillExample()">
                    <i class="fas fa-lightbulb"></i> Điền Ví Dụ
                </button>
                <a asp-action="Create" class="btn btn-secondary">
                    <i class="fas fa-edit"></i> Dùng Form Thường
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

<script>
function fillExample() {
    document.getElementById('nhanvien').value = 'Nguyen|Van|A|Nam|Ha Noi|15000000|1990-01-15|1|NULL';
}
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
