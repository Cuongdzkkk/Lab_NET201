@model IEnumerable<Lab5.Models.NhanVien>

@{
    ViewData["Title"] = "NhanVien Index";
}

<h1>Danh Sách Nhân Viên</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Tạo Mới
    </a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Mã NV</th>
            <th>Họ Tên</th>
            <th>Phái</th>
            <th>Địa Chỉ</th>
            <th>Lương</th>
            <th>Ngày Sinh</th>
            <th>Thân Nhân</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.MaNV</td>
            <td>@item.HoNV @item.TenLot @item.TenNV</td>
            <td>@item.Phai</td>
            <td>@item.DChi</td>
            <td>@item.Luong.ToString("N0") VNĐ</td>
            <td>@item.NgaySinh.ToShortDateString()</td>
            <td>
                @if(item.ThanNhans != null && item.ThanNhans.Any())
                {
                    <ul class="list-unstyled mb-0">
                    @foreach(var rel in item.ThanNhans)
                    {
                        <li class="small">
                            @rel.TenTN (@rel.MoiQuanHe)
                            <a href="javascript:void(0)" onclick="confirmDeleteRelative(@item.MaNV, '@rel.TenTN')" 
                               class="text-danger ms-1" title="Xóa">
                                <i class="fas fa-times-circle"></i>
                            </a>
                        </li>
                    }
                    </ul>
                }
                <a asp-action="AddRelative" asp-route-id="@item.MaNV" class="btn btn-sm btn-outline-success mt-1">
                    <i class="fas fa-user-plus"></i> Thêm
                </a>
            </td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-action="Details" asp-route-id="@item.MaNV" class="btn btn-sm btn-info" title="Xem chi tiết">
                        <i class="fas fa-eye"></i> Chi tiết
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.MaNV" class="btn btn-sm btn-primary" title="Sửa">
                        <i class="fas fa-edit"></i> Sửa
                    </a>
                    <button onclick="confirmDelete('@item.MaNV')" class="btn btn-sm btn-danger" title="Xóa">
                        <i class="fas fa-trash"></i> Xóa
                    </button>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Xác Nhận Xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa nhân viên này?</p>
                <p class="text-danger"><strong>Lưu ý:</strong> Tất cả thân nhân sẽ bị xóa cùng!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <form id="deleteForm" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Xác Nhận Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function confirmDelete(id) {
        // Clean up any existing backdrops
        document.querySelectorAll('.modal-backdrop').forEach(el => el.remove());
        
        var form = document.getElementById('deleteForm');
        form.action = '/NhanVien/Delete/' + id;
        
        // Create modal without backdrop
        var modalElement = document.getElementById('deleteModal');
        var modal = new bootstrap.Modal(modalElement, {
            backdrop: false,  // Disable backdrop to prevent blocking
            keyboard: true
        });
        
        // Clean up on close
        modalElement.addEventListener('hidden.bs.modal', function() {
            document.querySelectorAll('.modal-backdrop').forEach(el => el.remove());
        }, { once: true });
        
        modal.show();
    }

    function confirmDeleteRelative(maNv, tenTn) {
        if (confirm('Bạn có chắc muốn xóa thân nhân "' + tenTn + '"?')) {
            window.location.href = '/NhanVien/DeleteRelative?maNv=' + maNv + '&tenTn=' + encodeURIComponent(tenTn);
        }
    }
</script>
}
