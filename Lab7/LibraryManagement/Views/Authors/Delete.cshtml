@model LibraryManagement.Models.Author

@{
    ViewData["Title"] = "Xóa Tác Giả";
    bool hasBooks = ViewBag.HasBooks ?? false;
    int bookCount = ViewBag.BookCount ?? 0;
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Xác Nhận Xóa Tác Giả</h4>
            </div>
            <div class="card-body">
                @if (hasBooks)
                {
                    <div class="alert alert-danger">
                        <i class="bi bi-x-circle me-2"></i>
                        <strong>Không thể xóa!</strong> Tác giả này có <strong>@bookCount</strong> sách trong hệ thống. 
                        Vui lòng xóa hết sách trước khi xóa tác giả.
                    </div>
                }
                else
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa tác giả này? Hành động này không thể hoàn tác!
                    </div>
                }

                <dl class="row">
                    <dt class="col-sm-4">ID</dt>
                    <dd class="col-sm-8">@Model.AuthorId</dd>

                    <dt class="col-sm-4">Tên Tác Giả</dt>
                    <dd class="col-sm-8"><strong>@Model.AuthorName</strong></dd>

                    <dt class="col-sm-4">Số Sách</dt>
                    <dd class="col-sm-8">
                        <span class="badge @(hasBooks ? "bg-danger" : "bg-success")">@(Model.Books?.Count ?? 0) sách</span>
                    </dd>
                </dl>

                @if (hasBooks)
                {
                    <h6><i class="bi bi-book me-2"></i>Danh Sách Sách Cần Xóa Trước:</h6>
                    <ul class="list-group mb-3">
                        @if (Model.Books != null)
                        {
                            @foreach (var book in Model.Books)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @book.BookTitle
                                    <a asp-controller="Books" asp-action="Delete" asp-route-id="@book.BookId" 
                                       class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                }

                <form asp-action="Delete">
                    <input type="hidden" asp-for="AuthorId" />
                    <div class="d-flex gap-2">
                        @if (!hasBooks)
                        {
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Xác Nhận Xóa
                            </button>
                        }
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Quay Lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
