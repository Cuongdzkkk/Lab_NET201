@model LibraryManagement.Models.Author

@{
    ViewData["Title"] = "Chi Tiết Tác Giả";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0"><i class="bi bi-person-badge me-2"></i>Chi Tiết Tác Giả</h4>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5><i class="bi bi-info-circle me-2"></i>Thông Tin</h5>
                        <dl class="row">
                            <dt class="col-sm-4">ID</dt>
                            <dd class="col-sm-8">@Model.AuthorId</dd>

                            <dt class="col-sm-4">Tên Tác Giả</dt>
                            <dd class="col-sm-8"><strong>@Model.AuthorName</strong></dd>

                            <dt class="col-sm-4">Số Sách</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-primary">@(Model.Books?.Count ?? 0) sách</span>
                            </dd>
                        </dl>
                    </div>
                </div>

                <!-- Danh sách sách của tác giả -->
                @if (Model.Books != null && Model.Books.Any())
                {
                    <h5><i class="bi bi-book me-2"></i>Danh Sách Sách Của Tác Giả</h5>
                    <table class="table table-bordered">
                        <thead class="table-secondary">
                            <tr>
                                <th style="width: 60px;">#</th>
                                <th>Tên Sách</th>
                                <th style="width: 120px;">Năm XB</th>
                                <th style="width: 100px;">Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 1;
                            }
                            @foreach (var book in Model.Books)
                            {
                                <tr>
                                    <td>@(index++)</td>
                                    <td><i class="bi bi-journal-text me-1"></i>@book.BookTitle</td>
                                    <td>
                                        @if (book.PublicationYear.HasValue)
                                        {
                                            <span class="badge bg-secondary">@book.PublicationYear</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="Books" asp-action="Details" asp-route-id="@book.BookId" 
                                           class="btn btn-info btn-sm" title="Chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>Tác giả này chưa có sách nào trong hệ thống.
                    </div>
                }
            </div>
            <div class="card-footer">
                <a asp-action="Edit" asp-route-id="@Model.AuthorId" class="btn btn-warning">
                    <i class="bi bi-pencil me-1"></i>Chỉnh Sửa
                </a>
                <a asp-action="Delete" asp-route-id="@Model.AuthorId" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i>Xóa
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Quay Lại
                </a>
            </div>
        </div>
    </div>
</div>
