@model IEnumerable<LibraryManagement.Models.AuthorStatisticsViewModel>

@{
    ViewData["Title"] = "Thống Kê Tác Giả";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-bar-chart me-2"></i>Thống Kê Tác Giả (Custom Type + LINQ Select)</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-1"></i>Quay Lại
    </a>
</div>

<div class="alert alert-info">
    <i class="bi bi-info-circle me-1"></i>
    <strong>Demo Custom Type:</strong> Dữ liệu được project từ Entity <code>Author</code> sang Custom Type <code>AuthorStatisticsViewModel</code> sử dụng LINQ <code>Select()</code>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th style="width: 60px;">ID</th>
                    <th>Tên Tác Giả</th>
                    <th style="width: 100px;">Số Sách</th>
                    <th style="width: 130px;">Năm XB Sớm Nhất</th>
                    <th style="width: 130px;">Năm XB Mới Nhất</th>
                    <th style="width: 120px;">Trạng Thái</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.AuthorId</td>
                            <td><i class="bi bi-person me-1"></i>@item.AuthorName</td>
                            <td>
                                <span class="badge @(item.BookCount > 0 ? "bg-success" : "bg-secondary")">
                                    @item.BookCount sách
                                </span>
                            </td>
                            <td>
                                @if (item.EarliestPublicationYear.HasValue)
                                {
                                    <span class="badge bg-info">@item.EarliestPublicationYear</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                @if (item.LatestPublicationYear.HasValue)
                                {
                                    <span class="badge bg-primary">@item.LatestPublicationYear</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                @if (item.BookCount > 0)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>@item.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark"><i class="bi bi-exclamation-circle me-1"></i>@item.Status</span>
                                }
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center py-4">
                            <i class="bi bi-inbox display-4 text-muted d-block mb-2"></i>
                            <span class="text-muted">Chưa có dữ liệu thống kê</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="row mt-3">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h4>@Model.Count()</h4>
                    <small>Tổng Tác Giả</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h4>@Model.Sum(m => m.BookCount)</h4>
                    <small>Tổng Số Sách</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h4>@Model.Count(m => m.BookCount > 0)</h4>
                    <small>Tác Giả Có Sách</small>
                </div>
            </div>
        </div>
    </div>
}
