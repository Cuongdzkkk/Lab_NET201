@model IEnumerable<LibraryManagement.Models.Book>

@{
    ViewData["Title"] = "Danh Sách Sách";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-book me-2"></i>Danh Sách Sách</h2>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>Thêm Sách
    </a>
</div>

<!-- Form tìm kiếm sử dụng LINQ Where -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3 align-items-center">
            <div class="col-md-8">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="searchString" class="form-control" 
                           placeholder="Tìm theo tên sách hoặc tác giả..." 
                           value="@ViewBag.SearchString" />
                </div>
            </div>
            <div class="col-md-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search me-1"></i>Tìm kiếm
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-lg me-1"></i>Xóa
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-body p-0">
        <table class="table table-striped table-hover mb-0">
            <thead class="table-dark">
                <tr>
                    <th style="width: 60px;">ID</th>
                    <th>Tên Sách</th>
                    <th>Tác Giả</th>
                    <th style="width: 130px;">Năm XB</th>
                    <th style="width: 180px;">Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.BookId</td>
                            <td><i class="bi bi-journal-text me-1"></i>@item.BookTitle</td>
                            <td>
                                @if (item.Author != null)
                                {
                                    <a asp-controller="Authors" asp-action="Details" asp-route-id="@item.AuthorId" 
                                       class="badge badge-author text-white text-decoration-none">
                                        <i class="bi bi-person me-1"></i>@item.Author.AuthorName
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">Không xác định</span>
                                }
                            </td>
                            <td>
                                @if (item.PublicationYear.HasValue)
                                {
                                    <span class="badge bg-secondary">@item.PublicationYear</span>
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.BookId" class="btn btn-info btn-sm" title="Chi tiết">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.BookId" class="btn btn-warning btn-sm" title="Sửa">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.BookId" class="btn btn-danger btn-sm" title="Xóa">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center py-4">
                            <i class="bi bi-inbox display-4 text-muted d-block mb-2"></i>
                            <span class="text-muted">Chưa có sách nào trong thư viện</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="text-muted mt-3">
        <i class="bi bi-info-circle me-1"></i>Tổng cộng: <strong>@Model.Count()</strong> sách
    </div>
}
