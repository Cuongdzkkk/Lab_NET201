<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Antigravity Campus</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;500;700&display=swap">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        :root {
            --google-blue: #4285F4;
            --google-red: #EA4335;
            --google-yellow: #FBBC05;
            --google-green: #34A853;
            --bg-color: #FFFFFF;
            --text-color: #202124;
        }

        body {
            font-family: 'Outfit', sans-serif;
            background-color: var(--bg-color);
            color: var(--text-color);
            overflow-x: hidden;
            margin: 0;
            padding: 0;
        }

        /* Three.js Canvas */
        #canvas-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            pointer-events: none;
        }

        /* Navbar Override */
        .navbar {
            background: rgba(255, 255, 255, 0.9) !important;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.05);
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }
        .navbar-brand {
            font-weight: 700;
            font-size: 1.5rem;
            background: linear-gradient(90deg, var(--google-blue), var(--google-red), var(--google-yellow), var(--google-green));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        .nav-link {
            color: #5f6368 !important;
            font-weight: 500;
            transition: color 0.3s;
        }
        .nav-link:hover {
            color: var(--google-blue) !important;
        }

        /* Container */
        .main-content {
            padding-top: 80px;
            padding-bottom: 40px;
            position: relative;
            z-index: 1;
        }

        /* OVERRIDES: Table - Floating Pills */
        table.table {
            border-collapse: separate;
            border-spacing: 0 10px; /* Space between rows */
            background: transparent !important;
        }
        
        table.table thead th {
            border: none;
            background: transparent;
            color: #5f6368;
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.05em;
            padding: 15px 20px;
        }

        table.table tbody tr {
            background: #ffffff;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
            border-radius: 50px; /* Attempting pill shape on row, usually needs td radius */
            transition: transform 0.2s, box-shadow 0.2s;
        }

        table.table tbody tr:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(66, 133, 244, 0.15);
        }

        table.table tbody td {
            border: none;
            padding: 20px 20px;
            vertical-align: middle;
            background: white; /* Needed for border radius masking */
        }
        
        table.table tbody tr td:first-child {
            border-top-left-radius: 15px;
            border-bottom-left-radius: 15px;
        }
        table.table tbody tr td:last-child {
            border-top-right-radius: 15px;
            border-bottom-right-radius: 15px;
        }

        /* OVERRIDES: Buttons */
        .btn {
            border-radius: 50px;
            font-weight: 700;
            padding: 10px 24px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            border: none;
            transition: all 0.3s ease;
        }
        .btn-primary {
            background: var(--google-blue);
            box-shadow: 0 4px 15px rgba(66, 133, 244, 0.3);
        }
        .btn-primary:hover {
            background: #3367d6;
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(66, 133, 244, 0.4);
        }
        .btn-success { background: var(--google-green); }
        .btn-danger { background: var(--google-red); }
        .btn-warning { background: var(--google-yellow); color: #202124; }

        /* OVERRIDES: Inputs */
        .form-control {
            border-radius: 12px;
            background: #f1f3f4;
            border: 2px solid transparent;
            padding: 12px 16px;
            transition: all 0.3s;
        }
        .form-control:focus {
            background: #ffffff;
            border-color: var(--google-blue);
            box-shadow: 0 0 0 4px rgba(66, 133, 244, 0.1);
        }

        /* Card override commonly used in Index/Create */
        .card {
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.05);
            background: rgba(255,255,255,0.8);
            backdrop-filter: blur(10px);
        }

        /* Footer */
        footer {
            margin-top: auto;
            text-align: center;
            padding: 20px;
            color: #9aa0a6;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div id="canvas-container"></div>

    <nav class="navbar navbar-expand-lg fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">ANTIGRAVITY</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navContent">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/Students">Students</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Enrollments">Enrollments</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container main-content">
        @RenderBody()
    </div>

    <footer>
        &copy; 2026 StudentManagement - Lab 7
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        // ANTIGRAVITY THEME - THREE.JS
        document.addEventListener('DOMContentLoaded', () => {
            const container = document.getElementById('canvas-container');
            const scene = new THREE.Scene();
            
            // Background is technically set by CSS, but we can enable fog if we want depth
            scene.fog = new THREE.FogExp2(0xffffff, 0.002);

            const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
            camera.position.z = 30;

            const renderer = new THREE.WebGLRenderer({ alpha: true, antialias: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.setPixelRatio(window.devicePixelRatio);
            container.appendChild(renderer.domElement);

            // Google Colors
            const colors = [0x4285F4, 0xEA4335, 0xFBBC05, 0x34A853];
            const geometries = [
                new THREE.IcosahedronGeometry(1, 0),
                new THREE.TorusGeometry(0.8, 0.3, 16, 100),
                new THREE.BoxGeometry(1.2, 1.2, 1.2),
                new THREE.ConeGeometry(0.8, 1.5, 32)
            ];

            const particles = [];
            const count = 50;

            for (let i = 0; i < count; i++) {
                const geom = geometries[Math.floor(Math.random() * geometries.length)];
                const color = colors[Math.floor(Math.random() * colors.length)];
                const mat = new THREE.MeshLambertMaterial({ color: color });
                const mesh = new THREE.Mesh(geom, mat);

                mesh.position.x = (Math.random() - 0.5) * 60;
                mesh.position.y = (Math.random() - 0.5) * 60 - 20; // Start lower
                mesh.position.z = (Math.random() - 0.5) * 40;
                
                mesh.rotation.x = Math.random() * Math.PI;
                mesh.rotation.y = Math.random() * Math.PI;

                const scale = Math.random() * 0.8 + 0.5;
                mesh.scale.set(scale, scale, scale);

                // Custom velocity property
                mesh.userData = {
                    velocity: Math.random() * 0.05 + 0.02,
                    rotSpeed: Math.random() * 0.02 - 0.01
                };

                scene.add(mesh);
                particles.push(mesh);
            }

            // Light
            const ambientLight = new THREE.AmbientLight(0xffffff, 0.6);
            scene.add(ambientLight);
            const dirLight = new THREE.DirectionalLight(0xffffff, 0.6);
            dirLight.position.set(10, 20, 10);
            scene.add(dirLight);

            // Animation Loop
            function animate() {
                requestAnimationFrame(animate);

                particles.forEach(p => {
                    p.position.y += p.userData.velocity;
                    p.rotation.x += p.userData.rotSpeed;
                    p.rotation.y += p.userData.rotSpeed;

                    // Reset if too high
                    if (p.position.y > 30) {
                        p.position.y = -35;
                        p.position.x = (Math.random() - 0.5) * 60;
                    }
                });

                renderer.render(scene, camera);
            }
            animate();

            // Resize
            window.addEventListener('resize', () => {
                camera.aspect = window.innerWidth / window.innerHeight;
                camera.updateProjectionMatrix();
                renderer.setSize(window.innerWidth, window.innerHeight);
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
