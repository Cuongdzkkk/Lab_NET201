@model OrderManagement.Models.Order

@{
    ViewData["Title"] = "Chi Tiết Đơn Hàng";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">
                    <i class="bi bi-receipt me-2"></i>Chi Tiết Đơn Hàng #@Model.OrderId
                </h4>
            </div>
            <div class="card-body">
                <!-- Thông tin đơn hàng -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5><i class="bi bi-info-circle me-2"></i>Thông Tin Đơn Hàng</h5>
                        <dl class="row">
                            <dt class="col-sm-5">Mã Đơn Hàng:</dt>
                            <dd class="col-sm-7"><strong>#@Model.OrderId</strong></dd>

                            <dt class="col-sm-5">Ngày Đặt:</dt>
                            <dd class="col-sm-7">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</dd>

                            <dt class="col-sm-5">Khách Hàng:</dt>
                            <dd class="col-sm-7">@Model.CustomerName</dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h6 class="text-muted mb-2">Tổng Tiền Đơn Hàng</h6>
                                <h2 class="price mb-0">@Model.TotalAmount.ToString("N0") VNĐ</h2>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Chi tiết sản phẩm -->
                <h5><i class="bi bi-box me-2"></i>Chi Tiết Sản Phẩm</h5>
                <table class="table table-bordered">
                    <thead class="table-secondary">
                        <tr>
                            <th style="width: 60px;">#</th>
                            <th>Mã SP</th>
                            <th>Tên Sản Phẩm</th>
                            <th class="text-center">Số Lượng</th>
                            <th class="text-end">Đơn Giá</th>
                            <th class="text-end">Thành Tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.OrderDetails != null && Model.OrderDetails.Any())
                        {
                            var index = 1;
                            @foreach (var detail in Model.OrderDetails)
                            {
                                <tr>
                                    <td>@(index++)</td>
                                    <td>@detail.ProductId</td>
                                    <td>@detail.ProductName</td>
                                    <td class="text-center">@detail.Quantity</td>
                                    <td class="text-end">@detail.UnitPrice.ToString("N0") VNĐ</td>
                                    <td class="text-end price">@detail.LineTotal.ToString("N0") VNĐ</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted">Không có chi tiết sản phẩm</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-dark">
                            <td colspan="5" class="text-end"><strong>Tổng Cộng:</strong></td>
                            <td class="text-end"><strong class="price">@Model.TotalAmount.ToString("N0") VNĐ</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="card-footer">
                <a asp-action="Delete" asp-route-id="@Model.OrderId" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i>Xóa Đơn Hàng
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Quay Lại
                </a>
            </div>
        </div>
    </div>
</div>
