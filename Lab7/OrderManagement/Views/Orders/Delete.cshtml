@model OrderManagement.Models.Order

@{
    ViewData["Title"] = "Xóa Đơn Hàng";
}

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Xác Nhận Xóa Đơn Hàng</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa đơn hàng này? Tất cả chi tiết sản phẩm trong đơn hàng cũng sẽ bị xóa. Hành động này không thể hoàn tác!
                </div>

                <!-- Thông tin đơn hàng -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5><i class="bi bi-info-circle me-2"></i>Thông Tin Đơn Hàng</h5>
                        <dl class="row">
                            <dt class="col-sm-5">Mã Đơn Hàng:</dt>
                            <dd class="col-sm-7"><strong>#@Model.OrderId</strong></dd>

                            <dt class="col-sm-5">Ngày Đặt:</dt>
                            <dd class="col-sm-7">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</dd>

                            <dt class="col-sm-5">Khách Hàng:</dt>
                            <dd class="col-sm-7">@Model.CustomerName</dd>

                            <dt class="col-sm-5">Tổng Tiền:</dt>
                            <dd class="col-sm-7"><span class="price">@Model.TotalAmount.ToString("N0") VNĐ</span></dd>
                        </dl>
                    </div>
                    <div class="col-md-6">
                        @if (Model.OrderDetails != null && Model.OrderDetails.Any())
                        {
                            <h5><i class="bi bi-box me-2"></i>Sản Phẩm Sẽ Bị Xóa</h5>
                            <ul class="list-group">
                                @foreach (var detail in Model.OrderDetails)
                                {
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>@detail.ProductName (x@detail.Quantity)</span>
                                        <span class="badge bg-secondary">@detail.LineTotal.ToString("N0") VNĐ</span>
                                    </li>
                                }
                            </ul>
                        }
                    </div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="OrderId" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Xác Nhận Xóa
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-lg me-1"></i>Hủy
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
