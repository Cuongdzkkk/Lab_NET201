@* Views/Student/N1Problem.cshtml *@
@* Demo N+1 Problem trong Lazy Loading *@

@{
    ViewData["Title"] = "Demo N+1 Problem";
    var stats = ViewBag.Stats as List<(string Name, int CourseCount)>;
    int totalQueries = ViewBag.TotalQueries;
}

<div class="container mt-4">
    <div class="card bg-danger text-white mb-4">
        <div class="card-body">
            <h2><i class="bi bi-bug"></i> N+1 QUERY PROBLEM</h2>
            <p class="mb-0">
                N+1 Problem xảy ra khi Lazy Loading tạo ra quá nhiều queries không cần thiết
            </p>
        </div>
    </div>

    @* Thống kê *@
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card border-danger">
                <div class="card-body text-center">
                    <h1 class="display-3 text-danger">@totalQueries</h1>
                    <p class="mb-0">Tổng số queries đã chạy</p>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5>Chi tiết queries:</h5>
                </div>
                <div class="card-body">
                    <ol>
                        <li><strong>Query 1:</strong> SELECT * FROM Students</li>
                        @if (stats != null)
                        {
                            @foreach (var (name, count) in stats)
                            {
                                <li>SELECT * FROM Courses WHERE StudentId = (ID của @name)</li>
                            }
                        }
                    </ol>
                </div>
            </div>
        </div>
    </div>

    @* Kết quả *@
    <div class="card mb-4">
        <div class="card-header">
            <h5>Kết quả:</h5>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>Học sinh</th>
                        <th>Số khóa học</th>
                    </tr>
                </thead>
                <tbody>
                    @if (stats != null)
                    {
                        @foreach (var (name, count) in stats)
                        {
                            <tr>
                                <td>@name</td>
                                <td>@count</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    @* Giải pháp *@
    <div class="alert alert-success">
        <h5><i class="bi bi-lightbulb"></i> Giải pháp cho N+1 Problem:</h5>
        <p>Sử dụng <strong>Eager Loading</strong> với <code>.Include()</code>:</p>
        <pre class="bg-dark text-light p-3 rounded"><code>// Thay vì Lazy Loading (N+1 queries)
var students = await _context.Students.ToListAsync();
foreach (var s in students)
{
    Console.WriteLine(s.Courses.Count); // Mỗi lần = 1 query!
}

// Dùng Eager Loading (1 query duy nhất)
var students = await _context.Students
    .Include(s => s.Courses)  // Load luôn Courses
    .ToListAsync();</code></pre>
    </div>

    <a asp-action="Index" class="btn btn-primary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>
