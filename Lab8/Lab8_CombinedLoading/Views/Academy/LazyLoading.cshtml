@* Views/Academy/LazyLoading.cshtml *@
@* Demo Lazy Loading với query logs *@

@model Lab8_CombinedLoading.Models.Student

@{
    ViewData["Title"] = "Lazy Loading Demo";
    var queryLogs = ViewBag.QueryLogs as List<string>;
}

<div class="container mt-4">
    @* Header *@
    <div class="card bg-warning text-dark mb-4">
        <div class="card-body">
            <h2><i class="bi bi-hourglass-split"></i> LAZY LOADING DEMO</h2>
            <p class="mb-0">Dữ liệu được load <strong>tự động</strong> khi truy cập navigation property</p>
        </div>
    </div>

    <div class="row">
        @* Student info *@
        <div class="col-md-5">
            <div class="card shadow mb-4">
                <div class="card-header bg-dark text-white">
                    <h4><i class="bi bi-person"></i> @Model.Name</h4>
                </div>
                <div class="card-body">
                    <p><strong>Lớp:</strong> @Model.Class</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <hr>
                    <h5>Khóa học đã đăng ký:</h5>
                    <ul class="list-group">
                        @foreach (var enrollment in Model.Enrollments)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                @enrollment.Course?.Title
                                @if (enrollment.Grade.HasValue)
                                {
                                    <span class="badge bg-primary">@enrollment.Grade.Value.ToString("0.0")</span>
                                }
                            </li>
                        }
                    </ul>
                </div>
            </div>

            @* Select different student *@
            <div class="card">
                <div class="card-body">
                    <form asp-action="LazyLoading" asp-route-id="" method="get" class="d-flex gap-2">
                        <select name="id" class="form-select">
                            @{ var students = ViewBag.StudentList as List<Lab8_CombinedLoading.Models.Student>; }
                            @if (students != null)
                            {
                                @foreach (var student in students)
                                {
                                    if (Model.StudentId == student.StudentId)
                                    {
                                        <option value="@student.StudentId" selected>@student.Name</option>
                                    }
                                    else
                                    {
                                        <option value="@student.StudentId">@student.Name</option>
                                    }
                                }
                            }
                        </select>
                        <button type="submit" class="btn btn-warning">Xem</button>
                    </form>
                </div>
            </div>
        </div>

        @* Query logs *@
        <div class="col-md-7">
            <div class="card shadow">
                <div class="card-header bg-dark text-white">
                    <h5><i class="bi bi-terminal"></i> Query Logs - Demo N+1 Problem</h5>
                </div>
                <div class="card-body">
                    <pre class="bg-light p-3 rounded" style="max-height: 500px; overflow-y: auto;">@if (queryLogs != null)
{
    foreach (var log in queryLogs)
    {
        <text>@log
</text>
    }
}</pre>
                </div>
            </div>
        </div>
    </div>

    <a asp-action="Index" class="btn btn-primary mt-3">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>
