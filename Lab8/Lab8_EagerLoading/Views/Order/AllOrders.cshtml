@* Views/Order/AllOrders.cshtml *@
@* Hiển thị tất cả đơn hàng *@

@model List<Lab8_EagerLoading.Models.Order>

@{
    ViewData["Title"] = "Tất cả đơn hàng";
}

<div class="container mt-4">
    <h2><i class="bi bi-list-ul"></i> Tất cả đơn hàng</h2>
    
    <div class="alert alert-info">
        <strong>Eager Loading:</strong> Mỗi Order đã được load sẵn Customer và Dishes trong 1 query
    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Khách hàng</th>
                <th>Ngày đặt</th>
                <th>Số món</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.Customer?.Name</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@order.Dishes.Count</td>
                    <td>@order.TotalAmount.ToString("N0") VNĐ</td>
                    <td>
                        <span class="badge bg-@(order.Status == "Hoàn thành" ? "success" : 
                                                order.Status == "Đang giao" ? "info" : "warning")">
                            @order.Status
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Index" class="btn btn-primary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>
