@{
    ViewData["Title"] = "Redirecting...";
}

<div class="d-flex flex-column justify-content-center align-items-center" style="min-height: 70vh;">
    <div class="spinner-border text-danger mb-4" style="width: 3rem; height: 3rem;" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
    <h2 class="fw-bold">Redirecting</h2>
    <p class="text-muted">You will be moved in <span id="countdown" class="fw-bold text-dark">3</span> seconds...</p>
</div>

<script>
    let seconds = 3;
    const countdownEl = document.getElementById('countdown');
    
    const interval = setInterval(() => {
        seconds--;
        countdownEl.innerText = seconds;
        
        if (seconds <= 0) {
            clearInterval(interval);
            // Redirect to Home
            window.location.href = '@Url.Action("Index", "Home")';
        }
    }, 1000);
</script>
