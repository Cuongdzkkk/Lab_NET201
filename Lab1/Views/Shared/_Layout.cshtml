<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CUONGDZ // BROCODE</title>
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&family=JetBrains+Mono:wght@400;700&display=swap" rel="stylesheet">
    
    <!-- Nexus Core Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="antialiased selection:bg-cyan-500 selection:text-white">
    
    <!-- Atmosphere Layers -->
    <div class="aurora-bg"></div>
    <div class="grain-overlay"></div>
    <!-- Gravity Mesh Layer -->
    <canvas id="bg-mesh" style="position: fixed; top: 0; left: 0; width: 100vw; height: 100vh; z-index: -1; pointer-events: none;"></canvas>

    <!-- Page Transition Loader -->
    <div id="nexus-loader" class="fixed inset-0 z-[9999] bg-black flex items-center justify-center transition-opacity duration-700 pointer-events-none opacity-0">
        <div class="flex flex-col items-center">
            <div class="cube-loader mb-4"></div>
            <div class="text-xs font-mono text-cyan-500 tracking-[0.5em] animate-pulse">LOADING PROFILE</div>
        </div>
    </div>

    <!-- Main Viewport -->
    <div class="relative min-h-screen flex flex-col p-4 md:p-8 pb-32 transition-opacity duration-700 opacity-100" id="main-content">
        <main role="main" class="flex-grow w-full max-w-7xl mx-auto">
            @RenderBody()
        </main>
    </div>

    <!-- Floating Dock (MacOS Style) -->
    <nav class="nexus-dock">
        <a asp-controller="Home" asp-action="Index" class="dock-item @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" ? "active" : "")" title="Home">
            <i class="bi bi-grid-fill"></i>
        </a>
        <a href="#" class="dock-item" title="Labs">
            <i class="bi bi-layers-fill"></i>
        </a>
        <a href="#" class="dock-item" title="Terminal">
            <i class="bi bi-terminal-fill"></i>
        </a>
        <div class="w-px h-8 bg-white/20 mx-1"></div>
        <a href="https://github.com/Cuongdzkkk" target="_blank" class="dock-item" title="GitHub">
            <i class="bi bi-github"></i>
        </a>
    </nav>

    <!-- JS Core -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/nexus.js" asp-append-version="true"></script>
    <script src="~/js/gravity-mesh.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
